<Page x:Class="GitWave.UI.Pages.RepositoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GitWave.UI.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="700"
      Title="Repository Manager"
      Background="#F6F8FA">

    <Grid>
        <Grid Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}" 
              Panel.ZIndex="99" Background="#80FFFFFF">
            <ProgressBar IsIndeterminate="True" Width="200" Height="4" VerticalAlignment="Center"/>
        </Grid>

        <StackPanel MaxWidth="600" Margin="20" VerticalAlignment="Center">

            <TextBlock Text="Get Started" FontSize="24" FontWeight="Light" Margin="0,0,0,20" Foreground="#24292E"/>

            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="Local Repository" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>

                    <TextBlock Text="Repository Path" Foreground="#586069" Margin="0,0,0,5"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0" Text="{Binding RepoPath, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource InputBoxStyle}"/>
                        <Button Grid.Column="1" Content="Browse..." Command="{Binding BrowseFolderCommand}" Style="{StaticResource SecondaryButtonStyle}" Margin="4,0,0,0"/>
                    </Grid>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Create New" Command="{Binding CreateRepoCommand}" Style="{StaticResource SecondaryButtonStyle}" Margin="4"/>
                        <Button Content="Open Existing" Command="{Binding OpenRepoCommand}" Background="#2DA44E" Foreground="White" BorderThickness="0" Style="{StaticResource SecondaryButtonStyle}" Margin="0,4"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="Clone from Remote" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>

                    <TextBlock Text="Source URL" Foreground="#586069" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding SourceUrl, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource InputBoxStyle}"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Clone Repository" Command="{Binding CloneRepoCommand}" Style="{StaticResource SecondaryButtonStyle}" Margin="0,4"/>
                    </StackPanel>
                </StackPanel>
            </Border>

        </StackPanel>
    </Grid>
</Page>