<Page x:Class="GitWave.UI.Pages.OperationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:localPages="clr-namespace:GitWave.UI.Pages"
      xmlns:localModels="clr-namespace:GitWave.Models"
      xmlns:controls="clr-namespace:GitWave.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="800"
      Title="Operation"
      Width="Auto"
      VerticalAlignment="Stretch"
      HorizontalAlignment="Stretch">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Page.Resources>

    <Grid>
        <Grid Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}" 
          Background="White" Opacity="0.5" Panel.ZIndex="10">
            <ProgressBar IsIndeterminate="True" 
                     Width="200" 
                     Height="30" 
                     HorizontalAlignment="Center" 
                     VerticalAlignment="Center"/>
        </Grid>

        <Grid Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Row 0: Header -->
                <RowDefinition Height="5*"/>
                <!-- Row 2: Main content (Changes, Branch, etc.) -->
                <RowDefinition Height="3*"/>
                <!-- Row 3: Commit Graph -->
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Right" Margin="5">
                <!-- Username -->
                <Menu Grid.Column="1" VerticalAlignment="Center" Margin="20,0,20,0">
                    <MenuItem Header="Operations" Padding="10,5">
                        <MenuItem Header="Repository" 
                                  Command="{Binding ShowRepositoryPageCommand}"/>
                        <MenuItem Header="Pull Requests" 
                                  Command="{Binding ShowPullRequestsPageCommand}"/>
                    </MenuItem>
                </Menu>
                <TextBlock Text="{Binding AuthenticatedUser.Login}" 
                           VerticalAlignment="Center" 
                           FontWeight="SemiBold"/>
                
            </StackPanel>

            <!-- Main Content -->
            <Grid Grid.Row="1" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="2.5*"/>
                </Grid.ColumnDefinitions>

                <!-- File Changes Panel -->
                <GroupBox Header="Changes" Grid.Column="0" Margin="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <!-- For Staged Changes label -->
                            <RowDefinition Height="*" />
                            <!-- For Staged Changes TreeView -->
                            <RowDefinition Height="Auto" />
                            <!-- For Unstaged Changes label -->
                            <RowDefinition Height="*" />
                            <!-- For Unstaged Changes TreeView -->
                            <RowDefinition Height="Auto" />
                            <!-- For Buttons under Unstaged Changes -->
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!-- Staged Changes Label -->
                        <DockPanel Grid.Row="0" LastChildFill="False" Margin="2">
                            <Label Content="Staged Changes" FontWeight="Bold" VerticalAlignment="Center"/>
                            <Button Command="{Binding UnstageAllCommand}" 
                                    DockPanel.Dock="Right" 
                                    ToolTip="Stage All"
                                    Padding="8,2" FontSize="11" BorderThickness="0" Background="Transparent">
                                <TextBlock Text="&#xE108;" FontFamily="Segoe MDL2 Assets" FontSize="14" Foreground="OrangeRed"/>
                            </Button>
                        </DockPanel>

                        <!-- Staged Changes TreeView -->
                        <ListView Grid.Row="1" ItemsSource="{Binding StagedChanges}" Background="Transparent" HorizontalContentAlignment="Stretch"  BorderThickness="0">
                            <ListView.ItemTemplate>
                                <DataTemplate DataType="{x:Type localModels:ChangeItem}">
                                    <DockPanel LastChildFill="True" HorizontalAlignment="Stretch">
                                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                                            <Button Command="{Binding DataContext.UnstageCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                    CommandParameter="{Binding}"
                                                    ToolTip="Unstage"
                                                    Background="Transparent" BorderThickness="0" Margin="2,0">
                                                <TextBlock Text="&#xE108;" FontFamily="Segoe MDL2 Assets" FontSize="14" Foreground="OrangeRed"/>
                                            </Button>
                                            <Button Command="{Binding DataContext.ShowCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                    CommandParameter="{Binding}"
                                                    ToolTip="View Diff"
                                                    Background="Transparent" BorderThickness="0" Margin="2,0">
                                                <TextBlock Text="&#xE7C3;" FontFamily="Segoe MDL2 Assets" FontSize="14" Foreground="DodgerBlue"/>
                                            </Button>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding FilePath}" VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding Status}" Foreground="Green" Margin="8,0" FontSize="11" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </DockPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>

                        <!-- Unstaged Changes Label -->
                        <DockPanel Grid.Row="2" LastChildFill="False" Margin="2,10,2,2">
                            <Label Content="Unstaged Changes" FontWeight="Bold" VerticalAlignment="Center"/>
                            <Button Command="{Binding StageAllCommand}" 
                                    DockPanel.Dock="Right" 
                                    ToolTip="Stage All"
                                    Padding="8,2" FontSize="11" BorderThickness="0" Background="Transparent">
                                <TextBlock Text="&#xE710;" FontFamily="Segoe MDL2 Assets" FontSize="14" Foreground="Green"/>
                            </Button>
                        </DockPanel>

                        <!-- Unstaged Changes TreeView -->
                        <ListView Grid.Row="3" ItemsSource="{Binding UnstagedChanges}" Background="Transparent" HorizontalContentAlignment="Stretch" BorderThickness="0">
                            <ListView.ItemTemplate>
                                <DataTemplate DataType="{x:Type localModels:ChangeItem}">
                                    <DockPanel LastChildFill="True" HorizontalAlignment="Stretch">
                                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                                            <Button Command="{Binding DataContext.StageCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                    CommandParameter="{Binding}"
                                                    ToolTip="Stage"
                                                    Background="Transparent" BorderThickness="0" Margin="2,0">
                                                <TextBlock Text="&#xE710;" FontFamily="Segoe MDL2 Assets" FontSize="14" Foreground="Green"/>
                                            </Button>
                                            <Button Command="{Binding DataContext.ShowCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                    CommandParameter="{Binding}"
                                                    ToolTip="View Diff"
                                                    Background="Transparent" BorderThickness="0" Margin="2,0">
                                                <TextBlock Text="&#xE7C3;" FontFamily="Segoe MDL2 Assets" FontSize="14" Foreground="DodgerBlue"/>
                                            </Button>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding FilePath}" VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding Status}" Foreground="Red" Margin="8,0" FontSize="11" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </DockPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </GroupBox>

                <!-- Commit & Branch Panel -->
                <Grid Grid.Column="1" Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="4*"/>
                        <!-- Commit box -->
                        <RowDefinition Height="5*"/>
                        <!-- Branch box -->
                    </Grid.RowDefinitions>

                    <!-- ── Commit only ──────────────── -->
                    <GroupBox Header="Commit" Grid.Row="0" Margin="0,0,0,5">
                        <Grid Margin="5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <!-- Label -->
                                <RowDefinition Height="*"/>
                                <!-- TextBox -->
                                <RowDefinition Height="Auto"/>
                                <!-- Button -->
                            </Grid.RowDefinitions>

                            <TextBlock 
                                Grid.Row="0" 
                                Text="Commit Message:"/>

                            <TextBox 
                                Grid.Row="1"
                                Style="{StaticResource InputBoxStyle}"
                                Text="{Binding CommitMessage, UpdateSourceTrigger=PropertyChanged}" 
                                MinHeight="15"
                                AcceptsReturn="True"
                                TextWrapping="Wrap"
                                VerticalScrollBarVisibility="Auto"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                Margin="0,5"/>

                            <Button 
                                Grid.Row="2"
                                Content="Commit"
                                Command="{Binding CommitCommand}"
                                Style="{StaticResource SecondaryButtonStyle}"
                                HorizontalAlignment="Stretch"
                                Margin="0,5,0,0"/>
                        </Grid>
                    </GroupBox>


                    <!-- ── Branch management ──────────────── -->
                    <GroupBox Header="Branches" Grid.Row="1">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel Margin="10">

                                <!-- Current branch indicator -->
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Text="Current Branch:"/>
                                    <TextBlock Text="{Binding CurrentBranch}" 
                                       FontWeight="Bold" Margin="6,0"/>
                                </StackPanel>

                                <!-- Branch selector + Checkout -->
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <ComboBox Grid.Column="0"
                                      ItemsSource="{Binding Branches}"
                                      SelectedItem="{Binding SelectedBranch}"
                                      DisplayMemberPath="Name"/>
                                </Grid>

                                <!-- Merge / Delete -->
                                <UniformGrid Columns="3">
                                    <Button Content="Checkout"
                                            Command="{Binding CheckoutBranchCommand}"
                                            Style="{StaticResource SecondaryButtonStyle}"
                                            Width="80" Margin="4"/>
                                    <Button Content="Merge"
                                            Command="{Binding MergeBranchCommand}"
                                            Style="{StaticResource SecondaryButtonStyle}"
                                            Width="80" Margin="4"/>
                                    <Button Content="Delete"
                                            Command="{Binding DeleteBranchCommand}"
                                            Style="{StaticResource SecondaryButtonStyle}"
                                            Width="80" Margin="4"/>
                                </UniformGrid>

                                <!-- Create new branch -->
                                <Grid Margin="0,10,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox Style="{StaticResource InputBoxStyle}"
                                             Grid.Column="0"
                                             Text="{Binding NewBranchName, UpdateSourceTrigger=PropertyChanged}"
                                             Margin="0,0,6,0"/>
                                    <Button Grid.Column="1"
                                            Content="New Branch"
                                            Command="{Binding CreateBranchCommand}"
                                            Style="{StaticResource SecondaryButtonStyle}"
                                            Width="90"/>
                                </Grid>

                                <!-- Push / Pull -->
                                <UniformGrid Columns="2">
                                    <Button Content="Push" Command="{Binding PushCommand}" Style="{StaticResource SecondaryButtonStyle}" Margin="4" Background="#2DA44E" Foreground="White"/>
                                    <Button Content="Pull" Command="{Binding PullCommand}" Style="{StaticResource SecondaryButtonStyle}" Margin="4" Background="#2DA44E" Foreground="White"/>
                                </UniformGrid>
                            </StackPanel>
                        </ScrollViewer>
                    </GroupBox>
                </Grid>
            </Grid>

            <!-- Commit Graph now full width above Output Log -->
            <GroupBox Header="Commit Graph" Grid.Row="2" Margin="5">
                <controls:CommitGraphView
                    DataContext="{Binding Graph}"/>
            </GroupBox>
        </Grid>
    </Grid>
</Page>
