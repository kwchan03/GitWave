<Page x:Class="GitWave.UI.Pages.TempOperationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:localPages="clr-namespace:GitWave.UI.Pages"
      xmlns:localModels="clr-namespace:GitWave.Models"
      xmlns:controls="clr-namespace:GitWave.Controls"
      mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
      Title="Operation"
      Background="#F3F3F3">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <Style x:Key="NavButtonStyle" TargetType="RadioButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#555"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                            <ContentPresenter />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" Value="#E5E5E5"/>
                                <Setter Property="Foreground" Value="Black"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="BorderBrush" Value="#0969da"/>
                                <Setter Property="BorderThickness" Value="3,0,0,0"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#EAEAEA"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}" 
              Background="White" Opacity="0.5" Panel.ZIndex="100">
            <ProgressBar IsIndeterminate="True" Width="200" Height="6"/>
        </Grid>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="#F8F8F8" BorderBrush="#DDDDDD" BorderThickness="0,0,1,0">
                <DockPanel>
                    <StackPanel DockPanel.Dock="Top" Margin="20">
                        <TextBlock Text="GitClient" FontSize="18" FontWeight="Bold" Foreground="#333"/>
                        <TextBlock Text="{Binding AuthenticatedUser.Login, StringFormat='User: {0}'}" FontSize="12" Foreground="Gray" Margin="0,5,0,0"/>
                    </StackPanel>

                    <StackPanel DockPanel.Dock="Bottom" Margin="10">
                        <TextBlock Text="Repository Actions" FontSize="11" Foreground="Gray" Margin="10,0,0,5" FontWeight="Bold"/>
                        <Button Content="Open Local Repo..." Command="{Binding OpenRepoCommand}" Margin="5" Padding="5" Background="White" BorderBrush="#DDD"/>
                        <Button Content="Clone Remote..." Command="{Binding CloneRepoCommand}" Margin="5" Padding="5" Background="White" BorderBrush="#DDD"/>
                        <Button Content="Create New..." Command="{Binding CreateRepoCommand}" Margin="5" Padding="5" Background="White" BorderBrush="#DDD"/>
                    </StackPanel>

                    <StackPanel Margin="0,20,0,0">
                        <RadioButton Content="Source Control (Graph)" GroupName="Nav" IsChecked="True" Style="{StaticResource NavButtonStyle}"/>
                        <RadioButton Content="Pull Requests" GroupName="Nav" Command="{Binding ShowPullRequestsPageCommand}" Style="{StaticResource NavButtonStyle}"/>
                        <RadioButton Content="Settings" GroupName="Nav" Style="{StaticResource NavButtonStyle}"/>
                    </StackPanel>
                </DockPanel>
            </Border>

            <Grid Grid.Column="1" Background="White">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" BorderBrush="#EEEEEE" BorderThickness="0,0,0,1" Padding="20,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="Current Branch:" VerticalAlignment="Center" Foreground="Gray" Margin="0,0,10,0"/>
                            <ComboBox ItemsSource="{Binding Branches}" 
                                      SelectedItem="{Binding SelectedBranch}" 
                                      DisplayMemberPath="Name"
                                      Width="180" Height="30" VerticalContentAlignment="Center"/>

                            <Button Content="New" Command="{Binding CreateBranchCommand}" Margin="10,0,0,0" Padding="8,0" Height="30"/>
                            <Button Content="Checkout" Command="{Binding CheckoutBranchCommand}" Margin="5,0,0,0" Padding="8,0" Height="30"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                            <Button Content="Fetch" Command="{Binding FetchCommand}" Margin="5,0" Padding="15,6" Background="White"/>
                            <Button Content="Pull" Command="{Binding PullCommand}" Margin="5,0" Padding="15,6" Background="White"/>
                            <Button Content="Push" Command="{Binding PushCommand}" Margin="5,0" Padding="15,6" Background="#0969da" Foreground="White" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="350"/>
                        <ColumnDefinition Width="4"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0" Background="#FAFAFA">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="5"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <DockPanel Grid.Row="0">
                                <Grid DockPanel.Dock="Top" Margin="0,0,0,5">
                                    <TextBlock Text="Changes" FontWeight="Bold"/>
                                    <Button Content="Stage All" HorizontalAlignment="Right" FontSize="10" Padding="4,2"/>
                                </Grid>
                                <Border Background="White" BorderBrush="#DDD" BorderThickness="1">
                                    <TreeView ItemsSource="{Binding UnstagedChanges}" BorderThickness="0">
                                        <TreeView.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Width="280">
                                                    <TextBlock Text="{Binding FilePath}" TextTrimming="CharacterEllipsis"/>
                                                    <TextBlock Text="M" Foreground="#d4a72c" HorizontalAlignment="Right" FontWeight="Bold"/>
                                                </Grid>
                                            </DataTemplate>
                                        </TreeView.ItemTemplate>
                                    </TreeView>
                                </Border>
                            </DockPanel>

                            <GridSplitter Grid.Row="1" HorizontalAlignment="Stretch" Background="Transparent"/>

                            <DockPanel Grid.Row="2">
                                <Grid DockPanel.Dock="Top" Margin="0,10,0,5">
                                    <TextBlock Text="Staged Changes" FontWeight="Bold"/>
                                    <Button Content="Unstage All" HorizontalAlignment="Right" FontSize="10" Padding="4,2"/>
                                </Grid>
                                <Border Background="White" BorderBrush="#DDD" BorderThickness="1">
                                    <TreeView ItemsSource="{Binding StagedChanges}" BorderThickness="0">
                                        <TreeView.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Width="280">
                                                    <TextBlock Text="{Binding FilePath}" TextTrimming="CharacterEllipsis"/>
                                                    <TextBlock Text="A" Foreground="Green" HorizontalAlignment="Right" FontWeight="Bold"/>
                                                </Grid>
                                            </DataTemplate>
                                        </TreeView.ItemTemplate>
                                    </TreeView>
                                </Border>
                            </DockPanel>
                        </Grid>

                        <Border Grid.Row="1" Background="White" BorderBrush="#EEE" BorderThickness="0,1,0,0" Padding="15">
                            <StackPanel>
                                <TextBlock Text="Commit Message" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox Text="{Binding CommitMessage, UpdateSourceTrigger=PropertyChanged}" 
                                         Height="80" 
                                         AcceptsReturn="True" 
                                         TextWrapping="Wrap" 
                                         Padding="5"
                                         BorderBrush="#CCC"/>
                                <Button Content="Commit Staged" 
                                        Command="{Binding CommitCommand}" 
                                        Margin="0,10,0,0" 
                                        Height="35" 
                                        Background="#2da44e" 
                                        Foreground="White" 
                                        FontWeight="Bold"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Background="#EEE"/>

                    <Grid Grid.Column="2" Background="White">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" Padding="10" Background="#F8F8F8" BorderBrush="#EEE" BorderThickness="0,0,0,1">
                            <TextBlock Text="Repository History" FontWeight="Bold" Foreground="#555"/>
                        </Border>

                        <controls:CommitGraphView Grid.Row="1" DataContext="{Binding Graph}" Margin="10"/>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Page>