<Page x:Class="GitWave.UI.Pages.TempOperationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:localModels="clr-namespace:GitWave.Models"
      xmlns:controls="clr-namespace:GitWave.UI.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1000"
      Title="Operation"
      Background="#F6F8FA"
      FontFamily="Segoe UI">

    <Grid>
        <Grid Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}, FallbackValue=Collapsed}" 
              Background="#80FFFFFF" Panel.ZIndex="100">
            <ProgressBar IsIndeterminate="True" Width="200" Height="4" BorderThickness="0" Foreground="#2DA44E"/>
        </Grid>

        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Style="{StaticResource CardStyle}" Padding="12,8" Margin="0,0,0,16">
                <DockPanel>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Operations" Style="{StaticResource SectionHeaderStyle}" Margin="0,0,16,0" VerticalAlignment="Center"/>
                        <Menu Background="Transparent">
                            <MenuItem Header="Navigate" Padding="8,4">
                                <MenuItem Header="Repository Manager" Command="{Binding ShowRepositoryPageCommand}"/>
                                <MenuItem Header="Pull Requests" Command="{Binding ShowPullRequestsPageCommand}"/>
                            </MenuItem>
                        </Menu>
                    </StackPanel>
                    <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="{Binding AuthenticatedUser.Login}" FontWeight="SemiBold" Foreground="#586069" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <Border Background="#E1E4E8" CornerRadius="12" Width="24" Height="24">
                            <TextBlock Text="👤" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="10"/>
                        </Border>
                    </StackPanel>
                </DockPanel>
            </Border>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="2.5*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="280"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,8,8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="File Changes" Style="{StaticResource SectionHeaderStyle}"/>

                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <StackPanel>
                                <Border Background="#F1F8FF" Padding="8,4" CornerRadius="4" Margin="0,0,0,4">
                                    <TextBlock Text="Staged Changes" FontWeight="Bold" Foreground="#0366d6" FontSize="12"/>
                                </Border>
                                <TreeView ItemsSource="{Binding StagedChanges}" BorderThickness="0" Margin="0,0,0,12" SelectedItemChanged="TreeView_SelectedItemChanged">
                                    <TreeView.ItemTemplate>
                                        <DataTemplate DataType="{x:Type localModels:ChangeItem}">
                                            <TextBlock Text="{Binding FilePath}" Padding="2"/>
                                        </DataTemplate>
                                    </TreeView.ItemTemplate>
                                </TreeView>

                                <Border Background="#FFF8C5" Padding="8,4" CornerRadius="4" Margin="0,0,0,4">
                                    <TextBlock Text="Unstaged Changes" FontWeight="Bold" Foreground="#B08800" FontSize="12"/>
                                </Border>
                                <TreeView ItemsSource="{Binding UnstagedChanges}" BorderThickness="0" SelectedItemChanged="TreeView_SelectedItemChanged">
                                    <TreeView.ItemTemplate>
                                        <DataTemplate DataType="{x:Type localModels:ChangeItem}">
                                            <TextBlock Text="{Binding FilePath}" Padding="2"/>
                                        </DataTemplate>
                                    </TreeView.ItemTemplate>
                                </TreeView>
                            </StackPanel>
                        </ScrollViewer>

                        <UniformGrid Grid.Row="2" Columns="3" Margin="0,12,0,0">
                            <Button Content="Stage" Command="{Binding StageCommand}" Style="{StaticResource SecondaryButtonStyle}"/>
                            <Button Content="Unstage" Command="{Binding UnstageCommand}" Style="{StaticResource SecondaryButtonStyle}"/>
                            <Button Content="Diff" Command="{Binding ShowCommand}" Style="{StaticResource SecondaryButtonStyle}"/>
                        </UniformGrid>
                    </Grid>
                </Border>

                <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource CardStyle}" Padding="0" Margin="0,8,8,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Border Background="#F6F8FA" BorderBrush="#E1E4E8" BorderThickness="0,0,0,1" Padding="12,6" CornerRadius="6,6,0,0">
                            <TextBlock Text="Commit History Graph" FontWeight="Bold" FontSize="11" Foreground="#586069"/>
                        </Border>
                        <controls:CommitGraphView Grid.Row="1" DataContext="{Binding Graph}" Margin="8"/>
                    </Grid>
                </Border>

                <Grid Grid.Column="1" Grid.RowSpan="2" Margin="8,0,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock Text="Commit" Style="{StaticResource SectionHeaderStyle}"/>
                            <TextBox Style="{StaticResource InputBoxStyle}" Height="100" AcceptsReturn="True" TextWrapping="Wrap" 
                                     Text="{Binding CommitMessage, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,12"/>
                            <Button Content="Commit Changes" Command="{Binding CommitCommand}" Style="{StaticResource PrimaryButtonStyle}" HorizontalAlignment="Stretch"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock Text="Branching" Style="{StaticResource SectionHeaderStyle}"/>
                            <TextBlock Text="Current Branch:" FontSize="11" Foreground="#586069"/>
                            <TextBlock Text="{Binding CurrentBranch}" FontWeight="Bold" FontSize="14" Margin="0,0,0,12"/>

                            <ComboBox ItemsSource="{Binding Branches}" SelectedItem="{Binding SelectedBranch}" DisplayMemberPath="Name" Margin="0,0,0,8" Height="32"/>
                            <UniformGrid Columns="3" Margin="0,0,0,12">
                                <Button Content="Checkout" Command="{Binding CheckoutBranchCommand}" Style="{StaticResource SecondaryButtonStyle}"/>
                                <Button Content="Merge" Command="{Binding MergeBranchCommand}" Style="{StaticResource SecondaryButtonStyle}"/>
                                <Button Content="Delete" Command="{Binding DeleteBranchCommand}" Style="{StaticResource SecondaryButtonStyle}" Foreground="#CB2431"/>
                            </UniformGrid>

                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Style="{StaticResource InputBoxStyle}" Grid.Column="0" Text="{Binding NewBranchName, UpdateSourceTrigger=PropertyChanged}"/>
                                <Button Grid.Column="1" Content="New" Command="{Binding CreateBranchCommand}" Style="{StaticResource SecondaryButtonStyle}"/>
                            </Grid>

                            <UniformGrid Columns="2">
                                <Button Content="↓ Pull" Command="{Binding PullCommand}" Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,4,0"/>
                                <Button Content="↑ Push" Command="{Binding PushCommand}" Style="{StaticResource PrimaryButtonStyle}" Margin="4,0,0,0"/>
                            </UniformGrid>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Page>