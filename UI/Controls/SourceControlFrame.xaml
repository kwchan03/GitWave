<UserControl x:Class="GitWave.UI.Controls.SourceControlFrame"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GitWave.UI.Controls"
             xmlns:viewModels="clr-namespace:GitWave.ViewModels"
             xmlns:pages="clr-namespace:GitWave.UI.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/GitWave;component/Themes/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type viewModels:LoginViewModel}">
                <pages:LoginPage />
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModels:RepositoryViewModel}">
                <pages:RepositoryPage />
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModels:OperationViewModel}">
                <pages:OperationPage />
            </DataTemplate>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <ContentControl Content="{Binding NavService.CurrentSourceControlViewModel}"
                        HorizontalContentAlignment="Stretch"
                        VerticalContentAlignment="Stretch"/>
    </Grid>
</UserControl>
