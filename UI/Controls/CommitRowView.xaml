<UserControl x:Class="GitWave.UI.Controls.CommitRowView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:models="clr-namespace:GitWave.Models"
             xmlns:local="clr-namespace:GitWave.UI.Controls">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>

    <StackPanel>
        <!-- Top summary -->
        <Grid SnapsToDevicePixels="True" Margin="0,1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="{Binding GraphAreaWidth, RelativeSource={RelativeSource AncestorType=local:CommitRowView}}"/>
                <!-- Graph area -->
                <ColumnDefinition Width="*"/>
                <!-- Text area -->
            </Grid.ColumnDefinitions>

            <!-- Two rows: Summary + Expanded details -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <local:GraphCell Grid.RowSpan="2" Grid.Column="0" Row="{Binding}"
                             MinWidth="{Binding DataContext.MinGraphWidth, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=OneWay}"
                             VerticalAlignment="Stretch"
                             HorizontalAlignment="Stretch"
                             IsHitTestVisible="False"/>

            <!-- Right: Main Commit Row -->
            <Grid Grid.Column="1" Grid.Row="0" Margin="6,0"  MouseLeftButtonUp="OnClick">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="150"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="{Binding ShortSha}" 
                           FontFamily="Consolas" 
                           VerticalAlignment="Center" 
                           Margin="2,2"/>
                <TextBlock Grid.Column="1"
                           Text="{Binding Message}"
                           TextTrimming="CharacterEllipsis"
                           VerticalAlignment="Center"/>

                <TextBlock Grid.Column="2"
                           Margin="20,0"
                           Text="{Binding CommitDate, StringFormat={}{0:yyyy-MM-dd HH:mm}}"
                           VerticalAlignment="Center"/>
            </Grid>

            <Grid Grid.Column="1" Grid.Row="1" Visibility="{Binding IsExpanded, Converter={StaticResource BoolToVisibilityConverter}}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <!-- commit details -->
                    <ColumnDefinition Width="1*" />
                    <!-- changed files -->
                </Grid.ColumnDefinitions>

                <!-- Expand details -->
                <StackPanel Grid.Column="0" Margin="4,4">
                    <TextBlock>
                        <Run Text="Commit: " FontWeight="Bold"/>
                        <Run Text="{Binding Sha}" />
                    </TextBlock>

                    <TextBlock>
                        <Run Text="Parents: " FontWeight="Bold"/>
                        <Run Text="{Binding ParentsString, Mode=OneWay}" />
                    </TextBlock>

                    <TextBlock>
                        <Run Text="Author: " FontWeight="Bold"/>
                        <Run Text="{Binding Author}"/>
                        <Run Text="&lt;"/>
                        <Run Text="{Binding AuthorEmail}"/>
                        <Run Text="&gt;"/>
                    </TextBlock>

                    <TextBlock>
                        <Run Text="Committer: " FontWeight="Bold"/>
                        <Run Text="{Binding Committer}"/>
                        <Run Text=" &lt;"/>
                        <Run Text="{Binding CommitterEmail}"/>
                        <Run Text="&gt;"/>
                    </TextBlock>

                    <TextBlock>
                        <Run Text="Date: " FontWeight="Bold"/>
                        <Run Text="{Binding CommitDate, StringFormat={}{0:MMMM d\, yyyy h:mm tt}}" />
                    </TextBlock>

                    <TextBlock Text="{Binding Message}" TextWrapping="Wrap" Margin="0,5"/>
                </StackPanel>

                <!-- 📄 Right: Changed Files List -->
                <ListView Grid.Column="1"
                    ItemsSource="{Binding ChangedFiles}"
                    PreviewMouseLeftButtonUp="OnChangedFileClick"
                    BorderThickness="0"
                    Padding="0"
                    ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="5,0">
                                <TextBlock FontFamily="Segoe MDL2 Assets"
                                           VerticalAlignment="Center"
                                           Text="{Binding IconGlyph}"
                                           Foreground="{Binding IconColor}"
                                           FontSize="12"
                                           FontWeight="ExtraBold"
                                           Width="20"/>
                                <TextBlock Text="{Binding FileName}"
                                           Foreground="{Binding IconColor}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Grid>
    </StackPanel>
</UserControl>
