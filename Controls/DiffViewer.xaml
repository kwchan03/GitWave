<UserControl x:Class="GitGUI.Controls.DiffViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GitGUI.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="4"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <!-- BEFORE -->
        <Border Grid.Column="0" BorderBrush="#CCC" BorderThickness="1" Padding="6">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Before" FontWeight="Bold" Margin="0,0,0,6"/>
                <ListView Grid.Row="1" ItemsSource="{Binding Rows}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{Binding BeforeBrush}" Padding="4" Margin="0,0,0,4">
                                <StackPanel>
                                    <TextBlock Text="{Binding Label}" FontWeight="SemiBold" />
                                    <TextBlock Text="{Binding Before}" />
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Border>

        <!-- Divider -->
        <Grid Grid.Column="1" Background="#DDD"/>

        <!-- AFTER -->
        <Border Grid.Column="2" BorderBrush="#CCC" BorderThickness="1" Padding="6">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="After" FontWeight="Bold" Margin="0,0,0,6"/>
                <ListView Grid.Row="1" ItemsSource="{Binding Rows}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{Binding AfterBrush}" Padding="4" Margin="0,0,0,4">
                                <StackPanel>
                                    <TextBlock Text="{Binding Label}" FontWeight="SemiBold" />
                                    <TextBlock Text="{Binding After}" />
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Border>
    </Grid>
</UserControl>
