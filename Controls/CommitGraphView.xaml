<UserControl x:Class="GitGUI.Controls.CommitGraphView"
             x:Name="root"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:models="clr-namespace:GitGUI.Models"
             xmlns:local="clr-namespace:GitGUI.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Grid.IsSharedSizeScope="True">
        <!-- no header section -->
        <ListView ItemsSource="{Binding ItemsSource, ElementName=root}"
          SelectedItem="{Binding SelectedItem, ElementName=root, Mode=TwoWay}"
          BorderThickness="0"
          Padding="0"
          HorizontalContentAlignment="Stretch"
          ScrollViewer.CanContentScroll="True">

            <!-- ✅ Define the panel and set virtualization here -->
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel
          IsItemsHost="True"
          VirtualizingPanel.IsVirtualizing="True"
          VirtualizingPanel.VirtualizationMode="Recycling"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>

            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Height" Value="{Binding RowHeight, ElementName=root}"/>
                    <Setter Property="Padding" Value="0"/>
                    <Setter Property="Margin"  Value="0"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListViewItem">
                                <Border x:Name="Bd"
                                        Background="{TemplateBinding Background}"
                                        Padding="0" SnapsToDevicePixels="True">
                                    <ContentPresenter/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Bd" Property="Background" Value="#11000000"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Bd" Property="Background" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"/>
                                        <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.HighlightTextBrushKey}}"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListView.ItemContainerStyle>

            <!-- your ItemTemplate stays the same -->
            <ListView.ItemTemplate>
                <DataTemplate DataType="{x:Type models:CommitRow}">
                    <Grid SnapsToDevicePixels="True">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="{Binding GraphWidth, ElementName=root}" SharedSizeGroup="ColGraph"/>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition Width="100"  SharedSizeGroup="ColSha"/>
                            <ColumnDefinition Width="*"    SharedSizeGroup="ColMsg"/>
                            <ColumnDefinition Width="160"  SharedSizeGroup="ColDate"/>
                        </Grid.ColumnDefinitions>

                        <local:GraphCell 
                            Grid.Column="0"
                            VerticalAlignment="Stretch"
                            IsHitTestVisible="False"
                            Width="{Binding GraphWidth, ElementName=root}"
                            Row="{Binding}"/>

                        <TextBlock Grid.Column="2" Text="{Binding ShortSha}" FontFamily="Consolas" Margin="6,0"  VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="3" Text="{Binding Message}" TextTrimming="CharacterEllipsis"  VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="4" Text="{Binding When, StringFormat=\{0:yyyy-MM-dd HH:mm\}}"  VerticalAlignment="Center"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </Grid>
</UserControl>
